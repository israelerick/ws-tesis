<div class="container p-4">
    <div class="row">
        {{#each users}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    Fullname
                    <a href="{{fullname}}" target="_blank">
                        <h3 class="card-title text-uppercase">
                            
                             {{fullname}}
                        </h3>
                    </a>
                   
                    <p class="text-muted">
                        {{timeago created_at}}
                    </p>
                   
                   

                      <a class="nav-link dropdown-toggle"  href="/users" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Options 
              </a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <a class="dropdown-item" href="/users/edit/{{id}}">Edit User</a>
                <a class="dropdown-item" href="/users/users/reset/{{username}}">Send reset password to user</a>
                 <a class="dropdown-item" href="/users/users/auth/{{username}}">Send mail for activation</a>
              </div>
            </li>

                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>There are not users saved yet.</p>
               
            </div>
        </div>
        {{/each}}
    </div>
</div>
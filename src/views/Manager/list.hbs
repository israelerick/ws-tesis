<div class="container p-4">
    <div class="row">
        {{#each Managers}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <a href="{{Nombre}}" target="_blank">
                        <h3 class="card-title text-uppercase">
                            {{Apellido}}
                        </h3>
                    </a>
                    <p class="m-2">{{Available}}</p>
                    <p class="text-muted">
                        {{timeago created_at}}
                    </p>
                    <a class="btn btn-danger" href="/Manager/delete/{{id}}">
                        Delete Manager
                    </a>
                    <a class="btn btn-secondary" href="/Manager/edit/{{id}}">
                        Edit
                        <a href="/users/addManager/{{id}}"><i class="btn btn-success btn-block">Users</i></a>
                    </a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>There are not Manager saved yet.</p>
                <a href="/Manager/add">Create One!</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>